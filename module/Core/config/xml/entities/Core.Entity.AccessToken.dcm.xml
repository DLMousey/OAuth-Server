<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Core\Entity\AccessToken" table="access_tokens" repository-class="Core\Mapper\AccessTokenMapper">

        <id name="id" type="string" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="token" column="token" type="string" />
        <field name="dateCreated" column="created_at" type="datetime" />
        <field name="isRevoked" column="is_revoked" type="boolean" />
        <field name="lastUseDate" column="last_use_date" type="datetime" nullable="true"/>

        <many-to-one field="user" target-entity="Core\Entity\User" inversed-by="accessTokens" />
    </entity>
</doctrine-mapping>
